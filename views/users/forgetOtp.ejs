<script>

   let timeLimit = 2 * 60;

    // Update the countdown every second
    const countdown = setInterval(() => {
        // Calculate the minutes and seconds
        let minutes = Math.floor(timeLimit / 60);
        let seconds = timeLimit % 60;

        // Add leading zero to seconds if needed
        if (seconds < 10) {
            seconds = '0' + seconds;
        }

        // Display the countdown
        document.getElementById('timer').innerHTML = `Time Remaining: ${minutes} minutes and ${seconds} seconds`;

        // Decrement the time
        timeLimit--;

        // If time is up, clear the interval and take action
        if (timeLimit < 0) {
            clearInterval(countdown);
            document.getElementById('timer').innerHTML = '<span style="color: red;">Time Expired</span>';
        }
    }, 1000);

    function verifyOTP(event) {
        event.preventDefault();
        const otp = document.getElementById('otp').value;
        console.log('Entered OTP:', otp);
        
        fetch('/verfyForgetOtp', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ otp }),
        })
        .then(response => {
            if (!response.ok) {
                throw new Error('Network response was not ok');
            }
            return response.json();
        })
        .then(data => {
            console.log('Response data:', data);
            if (data.success === true) {
                console.log('OTP verified successfully, redirecting...');
                window.location.href = '/forgetChangePassword';
            } else {
                console.log('OTP verification failed:', data.message);
                document.getElementById('error-message').innerText = data.message;
            }
        })
        .catch(error => {
            console.error('Error:', error);
        });
    }
</script>

