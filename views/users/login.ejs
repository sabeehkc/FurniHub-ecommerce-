    <div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17" style="background-image: url('assets/images/backgrounds/login.jpg')">
        <div class="container">
           
            <div class="form-box" style="background-color: rgb(204, 202, 202);">
                <div class="text-center">
                    <h3>Login</h3>
                    <hr style="border-color: rgb(230, 151, 4);">
                </div>
               
                <form action="/loginverfy" method="post">
                   
                    <div class="form-group">
                        <label for="singin-email">Username or Email address *</label>
                        <input type="text" class="form-control" id="singin-email" name="email" required>
                        <small id="emailError" class="text-danger"></small>
                    </div><!-- End .form-group -->
    
                    <div class="form-group">
                        <label for="singin-password">Password *</label>
                        <input type="password" class="form-control" id="singin-password" name="password" required>
                        <small id="passwordError" class="text-danger"></small>
                    </div><!-- End .form-group -->
                    <% 
                    if(typeof message !== 'undefined'){
                      %>
                       <small style="color: rgb(241, 134, 134);">  <%= message %>   </small>
                       <%
                    }
            
            %>
    
            <div class="form-footer">
                <button type="submit" class="btn btn-outline-primary">
                    <span>LOG IN</span>
                    <i class="icon-long-arrow-right"></i>
                </button>
                        <div>
                            <a style="margin-left: 190px;" href="" class="text-dark">Forgotten Password?</a>
                        </div>
                        <div class=" mt-3 " style="margin-left: 100px;">
                            <p>Don't have an account? <a class="text-white" href="/register">Register</a></p>
                        </div>
                    </div><!-- End .form-footer -->
                </form>
                <hr>
                <div class="form-choice">
                    <p class="text-center">or sign in with</p>
                    <div class="row justify-content-center"> <!-- Use justify-content-center to center the content -->
                        <div class="col-sm-6">
