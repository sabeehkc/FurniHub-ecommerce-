<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.2/jspdf.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.15/jspdf.plugin.autotable.min.js"></script>

<script>
    function generatePDF() {
        console.log("Generating PDF...");
        const doc = new jsPDF();

        // Get div element
        const orderInvoiceDiv = document.getElementById("orderInvoice");
        console.log("Div element:", orderInvoiceDiv);

        // Extract data from the div
        const data = {
            head: [], // Headers will be empty as they are not explicitly defined in the div
            body: [],
        };

        // Iterate through child elements of the div
        const divChildren = orderInvoiceDiv.children;
        for (let i = 0; i < divChildren.length; i++) {
            const row = [];
            const child = divChildren[i];
            const cells = child.children;
            for (let j = 0; j < cells.length; j++) {
                row.push(cells[j].textContent.trim());
            }
            data.body.push(row);
        }
        console.log("Data from div:", data);

        // Set document title
        doc.text("Order Invoice", 10, 10);

        // Add table using autoTable plugin
        doc.autoTable({
            head: [data.head],
            body: data.body,
            startY: 40,
            headStyles: { fillColor: [124, 95, 240] },
            alternateRowStyles: { fillColor: [231, 215, 252] },
        });

        // Save PDF
        doc.save("order_invoce.pdf");
    }
</script>


