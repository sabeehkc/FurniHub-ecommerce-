        <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center"> Free Bootstrap admin templates from Bootstrapdash.com</span>
    </div>
</footer>




<script>
    function applyFilter() {
      const filterOption = document.getElementById("filterOption").value
      let startDate, endDate

      const today = new Date()
      const currentDay = today.getDate()
      const currentMonth = today.getMonth()
      const currentYear = today.getFullYear()
      const currentDayOfWeek = today.getDay() // Sunday = 0, Monday = 1, ..., Saturday = 6

      switch (filterOption) {
        case "day":
          startDate = new Date(currentYear, currentMonth, currentDay)
          endDate = new Date(currentYear, currentMonth, currentDay + 1)
          break
        case "week":
          const firstDayOfWeek = currentDay - currentDayOfWeek // Calculate the first day of the current week
          startDate = new Date(currentYear, currentMonth, firstDayOfWeek)
          endDate = new Date(currentYear, currentMonth, firstDayOfWeek + 7)
          break
        case "month":
          startDate = new Date(currentYear, currentMonth, 1) // First day of the current month
          endDate = new Date(currentYear, currentMonth + 1, 0) // Last day of the current month
          break
      }

      // Format start and end dates as yyyy-mm-dd (required format for date inputs)
      const formattedStartDate = startDate.toISOString().split('T')[0]
      const formattedEndDate = endDate.toISOString().split('T')[0]

      // Set the values of the date inputs in the form
      document.getElementById("startDate").value = formattedStartDate
      document.getElementById("endDate").value = formattedEndDate

      // Submit the form to apply the filter
      document.getElementById("filterForm").submit()
    }
</script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.2/jspdf.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.15/jspdf.plugin.autotable.min.js"></script>
<script>
    function generatePDF() {
        console.log("Generating PDF...");
        const doc = new jsPDF();

        // Get table element
        const table = document.getElementById("salesReport");
        console.log("Table element:", table);

        // Convert table to data array
        const data = doc.autoTableHtmlToJson(table);
        console.log("Data from table:", data);

        // Set document title
        doc.text("Sales Report", 10, 10);

        // Calculate total sales count and total amount
        const totalSalesCount = data.data.length;
        let totalAmount = 0;

        // Iterate through each row in the data
        for (const row of data.data) {
            const subtotal = parseFloat(row[4].content); 
            console.log("Subtotal:", subtotal);
            if (!isNaN(subtotal)) {
                totalAmount += subtotal; 
            }
        }

        // Add total sales count and total amount to the document
        doc.text(`Total Sales Count: ${totalSalesCount}`, 10, 20);
        doc.text(`Total Amount: ₹${totalAmount.toFixed(2)}`, 10, 30);

        const headers = [
            "Date",
            "Product",
            "Quantity",
            "Address",
            "Price",
            "Payment Status",
            "Payment Method",
            "Order Status",
        ];

        // Add table using autoTable plugin
        doc.autoTable({
            head: [headers],
            body: data.data,
            startY: 40,
            headStyles: { fillColor: [124, 95, 240] },
            alternateRowStyles: { fillColor: [231, 215, 252] },
        });

        // Save PDF
        doc.save("sales_report.pdf");
    }
</script>




   
